<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_item_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:text="标题"
                android:textColor="#ff000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_item_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:textColor="#666666"
                android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/news_item_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_orange"
            android:text="专题1"
            android:textColor="#FF7F0D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/news_item_showname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:text="范张"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/news_item_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="2015-02-02"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>